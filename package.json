    "test::unit": "export NODE_ENV=testing && jest --watch",
    "devserver": "webpack-dev-server --env.dev --mode=development",
    "build": "webpack --env.prod --mode=production",
    "serve": "npx http-server dist"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.2.2",
    "jest": "^23.6.0",
    "leaflet": "^1.4.0",
    "vue": "^2.5.22",
    "vue-template-es2015-compiler": "^1.8.1",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "@vue/test-utils": "^1.0.0-beta.28",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-imports": "^1.5.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest-transform-stub": "^1.0.0",
    "jest-vue-preprocessor": "^1.4.0",
    "pug": "^2.0.3",
    "style-loader": "^0.23.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^3.0.2",
    "vue-loader": "^15.5.1",
    "vue-template-compiler": "^2.5.22",
    "vuetify": "^1.4.2",
    "vuetify-loader": "^1.1.1",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.11"
  },
  "jest": {
    "verbose": true,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(@storybook/.*\\.vue$))"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/jest-setup.js"
  }
}
